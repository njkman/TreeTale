<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.example.android.treetale.MainActivity"
  >

 <!-- ImageView for the background to whole app -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ImageView for the logo-->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:src="@drawable/treelogo"
        />

    <ImageButton
        android:src="@drawable/helpholder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:src="@drawable/menuholder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        />
    
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >



            <ImageView
                android:id="@+id/treeOne"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/treeholder"
                />

            <TextView
                android:id="@+id/textOne"
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:text="The spider who ate the jam"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"/>


            <ImageView
                android:id="@+id/treeTwo"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/treeholder"
                android:layout_toRightOf="@+id/treeOne"/>



            <ImageView
                android:id="@+id/treeThree"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/treeholder"
                android:layout_toRightOf="@+id/treeTwo"/>

            <ImageView
                android:id="@+id/treeFour"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/treeholder"
                android:layout_toRightOf="@+id/treeThree"/>

            <ImageView
                android:id="@+id/treeFive"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/treeholder"
                android:layout_toRightOf="@+id/treeFour"/>

            <ImageView
                android:id="@+id/treeSix"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/treeholder"
                android:layout_toRightOf="@+id/treeFive"/>

            <ImageView
                android:id="@+id/treeSeven"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/treeholder"
                android:layout_toRightOf="@+id/treeSix"/>
            
            </RelativeLayout>
        
    </HorizontalScrollView>






</RelativeLayout>
